                if i >= len(shap_values): # Ensure class index is valid
                    continue

                print(f"Plotting SHAP for class: '{class_name}' (Index {i})")
                
                # SHAP Summary Plot (Bar)
                shap.summary_plot(shap_values[i], shap_sample_X, plot_type="bar", show=False)
